# ================================================ SERVER CONFIGURATION =======================================
PORT=50061
SERVER_HOST=0.0.0.0
GRPC_MAX_RECV_MSG_SIZE=4194304
GRPC_MAX_SEND_MSG_SIZE=4194304

# ================================================ DATABASE CONFIGURATION =======================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=2521
DB_NAME=userdb
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=300s

# ================================================ USER SERVICE CONFIGURATION =======================================
USER_SERVICE_ADDR=localhost:50051
USER_SERVICE_TIMEOUT=30s

# ================================================ STREAMING CONFIGURATION =======================================
# WebSocket and streaming settings
WEBSOCKET_PORT=8081
STREAM_BUFFER_SIZE=1000
STREAM_TIMEOUT=300s
MAX_CONCURRENT_STREAMS=1000

# WebRTC Configuration
WEBRTC_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
WEBRTC_TURN_SERVERS=turn:your-turn-server.com:3478
WEBRTC_TURN_USERNAME=your-turn-username
WEBRTC_TURN_PASSWORD=your-turn-password
WEBRTC_ICE_TIMEOUT=30s
WEBRTC_CONNECTION_TIMEOUT=60s

# Call Configuration
CALL_MAX_PARTICIPANTS=10
CALL_TIMEOUT=3600s
CALL_QUALITY_LEVELS=low,medium,high,ultra

# ================================================ NOTIFICATION CONFIGURATION =======================================
NOTIFICATION_BATCH_SIZE=50
NOTIFICATION_CLEANUP_DAYS=30
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5s

# OneSignal Configuration
ONESIGNAL_REST_API_KEY=your_rest_api_key_here
ONESIGNAL_APP_ID=your_app_id_here
ONESIGNAL_TIMEOUT=30s

# ================================================ REDIS CONFIGURATION =======================================
# Redis for real-time features, caching, and pub/sub
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s

# ================================================ SECURITY CONFIGURATION =======================================
# JWT and authentication
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=168h

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s
RATE_LIMIT_BURST=10

# ================================================ LOGGING CONFIGURATION =======================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/chat-service.log
LOG_MAX_SIZE=100MB
LOG_MAX_BACKUPS=5
LOG_MAX_AGE=30

# ================================================ MONITORING CONFIGURATION =======================================
# Metrics and health checks
METRICS_PORT=9090
HEALTH_CHECK_PORT=8080
PROFILE_PORT=6060

# ================================================ FILE UPLOAD CONFIGURATION =======================================
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,mp4,mp3,wav
UPLOAD_PATH=/uploads
CDN_URL=https://your-cdn.com

# ================================================ ENVIRONMENT =======================================
ENVIRONMENT=development
DEBUG=true
GRACEFUL_SHUTDOWN_TIMEOUT=30s